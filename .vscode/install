#!/bin/bash

EXTENSIONS=$(jq -r '.recommendations[]' extensions.json)

if [ -z "$EXTENSIONS" ]; then
  echo "‚ùå No extensions found in extensions.json!"
  exit 1
fi

for extension in $EXTENSIONS; do
  echo "üîÑ Downloading: $extension"
  code --install-extension "$extension" || echo "‚ùå Failed to install: $extension"
done

echo "‚úÖ All extensions have successfully loaded!"
